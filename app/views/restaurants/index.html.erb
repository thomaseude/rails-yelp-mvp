<div class="container">
  <h1>display Restaurant</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to restaurant.name, restaurant_path(restaurant.id) %>
        <%= link_to "📝", edit_restaurant_path(restaurant.id)%>
        <%= link_to "🗑", restaurant, method: :delete, remote: true %>
      </li>
    <% end %>
  </ul>

  <p>Add a restaurant <%= link_to "➕", new_restaurant_path%></p>
</div>
